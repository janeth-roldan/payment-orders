<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated code from OpenAPI Generator -->
    <Match>
        <Package name="~com\.banking\.paymentorders\.adapter\.in\.rest\.(model|api).*"/>
    </Match>
    
    <!-- Exclude specific bug patterns for DTOs if needed -->
    <Match>
        <Class name="~.*\.adapter\.in\.rest\.model\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Exclude reflection warnings in PaymentOrderPersistenceMapper -->
    <!-- Uso intencional de reflexiÃ³n para setear campos privados desde la base de datos -->
    <Match>
        <Class name="com.banking.payment.orders.adapter.out.persistence.mapper.PaymentOrderPersistenceMapper"/>
        <Method name="toDomain"/>
        <Bug pattern="DP_DO_INSIDE_DO_PRIVILEGED,REC_CATCH_EXCEPTION"/>
    </Match>
</FindBugsFilter>
